                    <TextBox x:Name="tb4KolvoLitrov" Height="20" Margin="91,405,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                </Grid>
            </Viewbox>
        </Grid>

    </Grid>
</Page>
