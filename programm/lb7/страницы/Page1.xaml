                    <Border BorderBrush="#FFC5FFBB" BorderThickness="1" Height="100" VerticalAlignment="Top" Background="#FFACF5E5" Margin="0,125,0,0"/>
                    <TextBox x:Name="tb1NumberPutevogo" Height="26" Margin="88,6,29,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <Label Content="Путевой №" HorizontalAlignment="Left" Margin="7,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="79" Padding="0" Height="24" Foreground="#FF1900FF" FontSize="14" FontWeight="Bold"/>
