                    <TextBox x:Name="tb3OstTopliva" Height="26" Margin="80,256,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <TextBox x:Name="tb3PokazSpidometra" Height="26" Margin="80,287,9,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <Label Content="Остаток&#xA;Топлива:" HorizontalAlignment="Left" Margin="5,249,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="66" Padding="0" Height="34"/>
                    <Label Content="Показания&#xA;спидометра:" HorizontalAlignment="Left" Margin="5,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="75" Padding="0" Height="34"/>
                    <TextBox x:Name="tb3DateTime" Height="26" Margin="78,322,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <Label Content="Дата&#xA;и время:" HorizontalAlignment="Left" Margin="5,318,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="51" Padding="0" Height="34"/>
                    <Border BorderThickness="1" Height="27" Margin="1,225,-1,0" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFADF7A0" Offset="1"/>
                                <GradientStop Color="#FFACF5E5"/>
                                <GradientStop Color="#FFECF3EF" Offset="0.451"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label Content="Информация при приезде" RenderTransformOrigin="-0.75,6.133" Padding="0" Margin="-0.8,9.2,35.4,-0.6" Foreground="#FF1A007F" FontStyle="Italic" FontSize="10"/>
                    </Border>
                    <Border BorderThickness="1" Height="27" Margin="0,352,0,0" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFADF7A0" Offset="1"/>
                                <GradientStop Color="#FFADF7A0"/>
                                <GradientStop Color="#FFECF3EF" Offset="0.451"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label Content="Заправка" RenderTransformOrigin="-0.75,6.133" Padding="0" Margin="-0.8,9.2,35.4,-0.6" Foreground="#FF1A007F" FontStyle="Italic" FontSize="10"/>
                    </Border>
                    <CheckBox x:Name="ch4Infozapr" Content="Информация о&#xD;&#xA; заправке" HorizontalAlignment="Left" Margin="100,357,0,0" VerticalAlignment="Top" FontSize="10" Padding="2,-4,0,0" Foreground="#FF035113"/>
