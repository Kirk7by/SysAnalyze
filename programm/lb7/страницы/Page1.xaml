                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="137*"/>
                    <ColumnDefinition Width="151*"/>
                    <ColumnDefinition Width="135*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="upd" Content="Изменить" Margin="0.2,0,0,3" Background="#FF8EF68D" BorderBrush="{x:Null}" Foreground="Black" Grid.Column="1" Click="upd_Click"/>
                <Button x:Name="add" Content="Добавить" Margin="0,0,4.8,3" Background="#FF8EF68D" BorderBrush="{x:Null}" Foreground="Black" Click="add_Click"/>
