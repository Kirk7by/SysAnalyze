                    <TextBox x:Name="tb1NumberAvto" Height="26" Margin="74,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <TextBox x:Name="tb2OstTopliva" Height="26" Margin="82,130,9,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <TextBox x:Name="tb2PokazSpidometra" Height="26" Margin="82,161,8,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Uid="1"/>
                    <Label Content="Табельный:" HorizontalAlignment="Left" Margin="5,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="66" Padding="0" Foreground="#FF1900FF"/>
                    <Label Content="Номер авто:" HorizontalAlignment="Left" Margin="5,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="68" Padding="0" Height="17" Foreground="#FF1900FF"/>
                    <Label Content="Остаток&#xA;Топлива:" HorizontalAlignment="Left" Margin="5,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="66" Padding="0" Height="34"/>
                    <Border BorderThickness="1" Height="27" Margin="0,98,0,0" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFF8D8FF"/>
                                <GradientStop Color="#FFACF5E5" Offset="1"/>
                                <GradientStop Color="White" Offset="0.493"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Label Content="Информация при отъезде" RenderTransformOrigin="-0.75,6.133" Padding="0" Margin="-0.8,9.2,64.4,-0.6" Foreground="#FF1A007F" FontStyle="Italic" FontSize="10"/>
                    </Border>
                    <Label Content="Показания&#xA;спидометра:" HorizontalAlignment="Left" Margin="5,157,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.75,6.133" Width="75" Padding="0" Height="34"/>
