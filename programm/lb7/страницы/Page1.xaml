      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="621"
	Title="Page1">

    <Grid>
        <Grid Margin="0,0,5.8,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="43.2"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition x:Name="columnVievbox" Width="40*"/>
                <ColumnDefinition Width="83*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Margin="0,2,0.4,-0.4" Width="9" Grid.Column="1" Background="#FFC5FFBB" Grid.RowSpan="2"/>
            <DataGrid Margin="4.6,25,1.2,9.4" Grid.Column="2"/>
            <Label Content="Информация о путевых листах" Margin="4.6,0,0,0" Grid.Column="2" HorizontalAlignment="Left" Width="181" Height="25" VerticalAlignment="Top"/>
